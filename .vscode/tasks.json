{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"command": ["npm", "run", "build", "--workspaces", "--if-present"],
			"problemMatcher": ["$tsc"],
			"label": "npm: build",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "dedicated",
				"showReuseMessage": true,
				"clear": true
			}
		}
	]
}
